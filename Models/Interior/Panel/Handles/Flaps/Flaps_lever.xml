<?xml version="1.0"?>

<PropertyList>

<!--    <effect>
        <inherits-from>Aircraft/c152/Models/Effects/interior/c152-interior-compartment</inherits-from>
        <object-name>Mixture</object-name>
    </effect> -->
    
    <path>Flaps_lever.ac</path>

<animation>
    <type>rotate</type>
    <object-name>Flap-Lever</object-name>
    <property>controls/flight/flaps</property>
    <factor>60.0</factor>
    <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
    </axis>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
</animation>
    <animation>
        <type>knob</type>
        <object-name>Flap-Lever</object-name>
        <visible>true</visible>
        <drag-direction>vertical</drag-direction>
        <action>
            <binding>
<!--                <command>property-adjust</command> -->
                <command>property-cycle</command>
                <property>controls/flight/flaps</property>
<!--                <factor>0.25</factor>
                <min>0</min>
                <max>1</max> -->
				<value>0.000</value>
				<value>0.617</value>
				<value>1.000</value>				
                <wrap>0</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <label>flaps pos: %3d%%</label>
                <measure-text>Flaps Position: 100%</measure-text>
                <tooltip-id>flapspos</tooltip-id>
                <mapping>percent</mapping>
                <property>controls/flight/flaps</property>
            </binding>
        </hovered>
    </animation>
</PropertyList>
