 </animation> -->

	<animation>
		<type>rotate</type>
		<object-name>CompassRose</object-name>
		<property alias="../../params/rotation-deg"/>
		<factor>-1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
  

	<animation>
		<type>rotate</type>
		<object-name>ADFNeedle</object-name>
		<property alias="../../params/adf-bearing-deg"/>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

 
	<animation>
		<type>knob</type>
		<object-name>HDGSelector</object-name>
		<property alias="../../params/rotation-deg"/>
		<factor>-8.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m> 0.013716</x-m>
			<y-m>-0.038761</y-m>
			<z-m>-0.042166</z-m>
		</center>    
		<action>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/rotation-deg"/>
				<factor>1</factor>
				<min>0</min>
				<max>360</max>
				<wrap>1</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>pa38.click("dial")</script>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>adf-hdg</tooltip-id>
				<label>ADF Heading: %3d</label>
				<property alias="../../../../params/rotation-deg"/>
			</binding>
		</hovered>
	</animation>

</PropertyList>
