  <animation>
    <type>noshadow</type>
  </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>10</max-m>
  </animation>
 
  <animation>
    <type>material</type>
    <object-name>CompassRose</object-name>
    <object-name>ADFNeedle</object-name>
    <object-name>Chassis</object-name>
    <emission>
        <red>0.98</red>
        <green>0.51</green>
        <blue>0.0</blue>
        <factor-prop>/sim/model/c152/lighting/instruments</factor-prop>
